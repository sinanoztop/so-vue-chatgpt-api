#app-header
    display flex
    align-items center
    justify-content space-between
    height 70px
    padding 0 30px
    background #fff
    border-bottom solid 1px $border_color
    transition all 300ms linear

    .sec-left
        a
            app_flex()
            height 33px
            font-size 18px
            font-weight 600

            span
                relative left 4px top -4px
                font-weight 400
                font-size 13px
            
        p
            font-size 13px
            font-style italic
            color green
    

    .sec-right
        display grid
        grid-template-columns 1fr 1fr
        align-items center
        gap 14px

        > div
            app_flex()

            svg, em
                margin-right 4px


.app-menu
    width 100%
    max-width 1170px
    margin 0px auto
    margin-top 50px

    .items
        display grid
        grid-template-columns 1fr 1fr 1fr
        grid-gap 20px
        
        a
            display block
            padding 30px
            background #fff
            border solid 1px $border_color
            border-radius(4px)
            cursor pointer
            transition all 300ms linear

            &:hover
                background $font_color
                color #fff

            .title-1
                display block
                font-size 17px
                font-weight 600
            
            .title-2
                display block
                margin 15px 0
                font-size 14px
                line-height 21px



#app-footer
    padding 30px 0
    margin-top 50px
    text-align center

    .social
        margin-top 20px

        a
            margin-left 10px

            &:first-child
                margin-left 0


.menu-option-title
    display grid
    grid-template-columns 60px 1fr
    grid-gap 20px
    background #fff
    padding 40px
    border solid 1px $border_color
    border-radius(4px)

    div
        &.left
            span
                app_flex()
                size(100%)
                font-size 40px
        &.right
            span
                display block
                margin-bottom 15px
                font-size 16px
                font-weight 800
            
            p
                font-size 14px
                line-height 21px


.menu-option-content
    margin-top 30px

    .form-item
        margin-bottom 20px
        textarea, input
            width 100%
            height 140px
            padding 20px
            background #fff
            font-size 14px
            resize none
            border solid 1px $border_color
            border-radius(4px)

            &:focus
                outline 0
                border-color $font_color

        input[ type = "text" ]
            
            height 50px

        span
            &.inf
                display block
                margin-top 10px
                font-size 14px
                font-style italic
                color red
            
        
        button
            width 100%
            height 50px
            background $font_color
            color #fff
            border none
            font-size 16px
            border-radius(4px)
            cursor pointer

            em
                relative left 2px top 1px


.nat-w
    background $red
    margin-bottom 20px
    padding 20px
    color #fff
    font-size 14px
    border-radius(4px)

    &.success
        background green

    em
        margin-right 4px


.loading-text
    margin-top 60px
    text-align center

    .spin
        display block
        size(30px)
        margin 0px auto
        margin-bottom 20px
        border solid 3px green
        border-left-color transparent
        border-radius(100%)
        transition all 300ms linear
        animation spin 800ms infinite linear

@keyframes spin
    from
        transform rotate(0deg)
    to
        transform rotate(360deg)

#popup
    app_flex()
    size(100%)
    fixed left top
    background rgba( 0,0,0,0.6 )
    z-index 10

    .c
        width 100%
        max-width 550px
        background #fff
        padding 20px
        border-radius(4px)

        .title
            display flex
            align-items center
            justify-content space-between

            span
                &:first-child
                    font-weight 600
                &:last-child
                    color $red
                    font-weight 600
        
        .type-title
            margin 20px 0
            background $font_color
            padding 14px
            border-radius(4px)
            color #fff
            font-size 13px
        

        .content
            textarea
                width 100%
                height auto
                padding 20px
                border solid 1px $border_color
                resize none

                &:focus
                    outline 0
            

            .copy-btn-w
                display flex
                justify-content flex-end
                margin-top 20px

                span
                    background $font_color
                    padding 10px 20px
                    color #fff
                    font-size 13px
                    border-radius(4px)

                    em
                        margin-right 3px
            

            .images
                display grid
                grid-template-columns 1fr 1fr 1fr
                grid-gap 20px

                .item
                    img
                        width 100%
                        max-height 150px
                        object-fit cover
                        border-radius(4px)
                    
                    p
                        a
                            app_flex()
                            margin-top 5px
                            padding 10px 0
                            background $font_color
                            font-size 12px
                            color #fff
                            border-radius(4px)

                            em
                                relative left 7px top 1px


.menu-back
    font-size 17px
    margin-bottom 20px
    font-weight 600
    cursor pointer

.example-form-text
    display block
    font-style italic
    font-weight bold
    margin-top 10px
    font-size 13px